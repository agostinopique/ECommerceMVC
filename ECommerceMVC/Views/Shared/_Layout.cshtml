<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerceMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow">
            <div class="container internal-nav-container">
                <div class="nav-logo">
                    <a class="homepage-link" asp-area="" asp-controller="Home" asp-action="Index" data-toggle="tooltip" data-placement="bottom" title="Go to HomePage">
                        <img class="navbar-img" src="~/ecommerce-logo.png" alt="ecommerce_logo"/>
                    </a>
                </div>

                <div class="navbar-collapse collapse d-flex">
                    <ul class="navbar-nav"> 
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Client" asp-action="Index">Clients</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Order" asp-action="Index">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>

                <div class="login-icon">
                    <a asp-controller ="Home" asp-action="Login" data-toggle="tooltip" data-placement="bottom" title="Login">
                        <i class="bi bi-person-circle text-light fs-3"></i>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <footer class="border-top text-muted bg-primary">
        <div class="container d-flex justify-content-between">
            <div class="footer-list text-white">

                <!-- Website map -->
                <h2>Site map</h2>
                <ul class="footer-nav">
                    <li>
                        <a asp-controller="Home" asp-action="Index">
                            Homepage
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Product" asp-action="Index">
                            Products
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Client" asp-action="Index">
                            Clients
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Order" asp-action="Index">
                            Orders
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Login">
                            Login
                        </a>
                    </li>
                </ul>
                <!-- /Website map -->

            </div>

            <div class="footer-social text-white">
                <p>Follow us on our networks</p>
                <div class="social-squares">
                    <div  id="instagram-box"
                    class="social-icon d-flex d-center">
                        <a href="#">
                            <i class="bi bi-instagram"></i>
                        </a>
                    </div>

                    <div id="facebook-icon" class="social-icon d-center"> 
                        <a href="#">
                            <i class="bi bi-facebook"></i>
                        </a>
                    </div>

                    <div id="youtube-icon" class="social-icon d-center">
                        <a href="#">
                            <i class="bi bi-youtube"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        

        <div class="container text-light">
            &copy; 2023 - Shopify - <a class="text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
